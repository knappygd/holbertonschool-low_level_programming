CFLAGS = -Wall -Werror -Wextra -pedantic
CC = gcc $(CFLAGS)
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
DEPENDS = m.h

.PHONY: all clean oclean fclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
	-include $(DEPENDS)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) *~ $(NAME)
	$(RM) $(OBJ)

re: fclean all
