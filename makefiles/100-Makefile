CFLAGS = -Wall -Werror -Wextra -pedantic
CC = gcc $(CFLAGS)
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM :=
DEPENDS = m.h

.PHONY: all clean oclean fclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
	-include $(DEPENDS)

clean:
	$(RM) rm -f *~ $(NAME)

oclean:
	$(RM) rm -f $(OBJ)

fclean:
	$(RM) rm -f *~ $(NAME)
	$(RM) rm -f $(OBJ)

re: fclean all
